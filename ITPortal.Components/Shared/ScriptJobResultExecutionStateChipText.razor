@implements IDisposable

<ChipText Color=@ScriptJobResult.ExecutionState.GetColor() Text=@ScriptJobResult.ExecutionState.ToStringFast() />

@code {
    [Parameter, EditorRequired]
    public ScriptJobResult ScriptJobResult { get; set; } = null!;

    protected override void OnInitialized()
    {
        ScriptJobResult.ExecutionResultReceived += OnExecutionResultReceived;
    }

    private void OnExecutionResultReceived(object? sender, ScriptExecutionState newState) => this.StateHasChanged();

    public void Dispose()
    {
        ScriptJobResult.ExecutionResultReceived -= OnExecutionResultReceived;
    }
}
