<div class="scroll output-container">
    @if (OutputList != null)
    {
        @for (int i = 0; i < OutputList.Count; i++)
        {
            ScriptOutputMessage message = OutputList.ElementAt(i);

            <div class="output-message" style=@(message.StreamType != ScriptOutputStreamType.Standard ? $"color:{message.StreamType.GetColor()}" : "")>
                <MudText>
                    @(message.Data)
                </MudText>
            </div>
        }
    }
</div>

@code {
    [Parameter, EditorRequired]
    public IReadOnlyList<ScriptOutputMessage> OutputList { get; set; } = null!;
}
