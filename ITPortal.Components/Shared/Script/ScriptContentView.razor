@using ITPortal.Lib.Automation.Script

﻿@if (Script.IsContentLoaded())
{
    <p class="scroll script-content">
        @foreach (string line in Script.FileContent)
        {
            @line
            <br>
        }
    </p>
}
else if (Script.ContentHasFailedToLoad())
{
    <p>Script failed to load</p>
}

@code {
    [Parameter, EditorRequired]
    public AutomationScript Script { get; set; } = null!;
}
