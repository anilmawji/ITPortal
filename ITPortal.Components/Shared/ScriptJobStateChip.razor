@using ITPortal.Lib.Automation.Job;

@implements IDisposable

@*customize mud chip appearance*@
<style>
    .mud-chip-text.mud-chip-color-default {
        background-color: var(--mud-palette-background-hover);
        border: 1px solid grey;
    }

    .mud-chip-text.mud-chip-color-secondary {
        background-color: var(--mud-palette-secondary-hover);
        border: 1px solid var(--mud-palette-secondary);
    }

    .mud-chip-text {
        margin-left: 0;
        margin-right: 0;
    }
</style>

@if (Job.State == ScriptJobState.Running)
{
    <MudChip Variant="Variant.Text" Size="Size.Medium" Icon=@GetIcon() Label="true" Color="MudBlazor.Color.Secondary">
        @Job.State.ToStringFast()
    </MudChip>
}
else
{
    <MudChip Variant="Variant.Text" Size="Size.Medium" Label="true">
        @Job.State.ToStringFast()
    </MudChip>
}

@code {
    [Parameter, EditorRequired]
    public ScriptJob Job { get; set; } = null!;
}
