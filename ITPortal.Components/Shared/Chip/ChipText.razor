<div class="chip">
    @*Colors must be given in hex in order to add transparency ('21' = 13% transparence)*@
    <div class="chip-text" style="--chip-color:@Color; --chip-background-color:@(Color + "21")">
        <span>@ChildContent</span>
    </div>
</div>

@code {
    [Parameter]
    public string Color { get; set; } = "#747474";

    [Parameter, EditorRequired]
    public RenderFragment ChildContent { get; set; } = null!;
}
